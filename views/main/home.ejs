<% layout("/layouts/boilerplate")-%>

<div class="hero-section">
  <div class="container position-relative">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-4">
          Welcome to Faculty WorkLoad Management System
        </h1>
        <p class="lead mb-4">
          Efficiently manage and track faculty workloads across departments with
          our innovative platform.
        </p>
        <a
          href="/departments"
          class="btn btn-primary btn-lg px-4 py-2"
          style="background-color: #1ecd8d; border-color: #1ecd8d">
          Explore Departments <i class="bi bi-arrow-right ms-2"></i>
        </a>
      </div>
      <div class="col-lg-6 d-none d-lg-block">
        <img src="./images/hero.png" alt="FWMS Dashboard" class="img-fluid" />
      </div>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card feature-card h-100">
        <div class="card-body text-center p-4">
          <i class="bi bi-clipboard-data feature-icon"></i>
          <h3 class="card-title h4 mb-3" style="color: #182527">
            Manage Workloads
          </h3>
          <p class="card-text" style="color: #545454">
            Easily assign and track faculty workloads across departments and
            courses with our intuitive interface.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card feature-card h-100">
        <div class="card-body text-center p-4">
          <i class="bi bi-search feature-icon"></i>
          <h3 class="card-title h4 mb-3" style="color: #182527">
            Find Available Faculty
          </h3>
          <p class="card-text" style="color: #545454">
            Quickly locate available faculty members for specific time slots and
            departments using our advanced search tools.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card feature-card h-100">
        <div class="card-body text-center p-4">
          <i class="bi bi-megaphone feature-icon"></i>
          <h3 class="card-title h4 mb-3" style="color: #182527">
            Department Announcements
          </h3>
          <p class="card-text" style="color: #545454">
            Stay updated with important announcements and messages for your
            department in real-time.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bg-light py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-4 mb-lg-0">
        <h2 class="mb-3" style="color: #182527">
          Streamline Your Academic Planning
        </h2>
        <p class="lead" style="color: #545454">
          Our comprehensive system helps you optimize resource allocation and
          improve overall efficiency in managing faculty workloads.
        </p>
        <a
          href="#"
          class="btn btn-outline-primary"
          style="color: #1ecd8d; border-color: #1ecd8d"
          >Learn More</a
        >
      </div>
      <!-- <div class="col-lg-6">
        <img
          src="/api/placeholder/500/300"
          alt="Academic Planning"
          class="img-fluid rounded shadow" />
      </div> -->
    </div>
  </div>
</div>
