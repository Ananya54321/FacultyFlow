<% layout("/layouts/boilerplate")-%>

<div class="container mt-5">
  <div
    class="department-header mb-5 p-4 rounded shadow-sm"
    style="background-color: #f8f9fa; border-left: 5px solid #1ecd8d">
    <h1 style="color: #182527; font-weight: bold; margin-bottom: 0.5rem">
      <%= department.deptname %>
    </h1>
    <div class="d-flex align-items-center">
      <span
        class="badge bg-secondary me-2"
        style="background-color: #1ecd8d !important"
        ><%= department.deptcode %></span
      >
      <h3 style="color: #545454; margin-bottom: 0"></h3>
    </div>
  </div>

  <h2 class="mb-4" style="color: #182527; font-weight: bold">
    Teachers in the Department
  </h2>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for (let teacher of department.teachers) { %>
    <div class="col">
      <div
        class="card h-100 shadow-sm hover-shadow"
        style="border: none; transition: all 0.3s">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-3" style="color: #182527; font-weight: 600">
            <%= teacher.name %>
          </h5>
          <p class="card-text text-muted mb-4">
            Faculty ID: <%= teacher.fid %>
          </p>
          <div class="mt-auto">
            <a
              href="/teachers/<%= teacher._id %>"
              class="btn btn-outline-primary custom-btn-outline"
              style="color: #1ecd8d; border-color: #1ecd8d; font-weight: 500">
              <i class="fas fa-user-circle me-2"></i>View Profile
            </a>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<style>
  .hover-shadow:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    transform: translateY(-5px);
  }
  .custom-btn-outline {
    transition: all 0.3s;
  }
  .custom-btn-outline:hover {
    background-color: #1ecd8d;
    color: #ffffff !important;
    transform: translateY(-2px);
  }
  .department-header {
    transition: all 0.3s;
  }
  .department-header:hover {
    box-shadow: 0 0.5rem 1rem rgba(30, 205, 141, 0.15) !important;
    transform: translateY(-3px);
  }
</style>

<script
  src="https://kit.fontawesome.com/your-fontawesome-kit.js"
  crossorigin="anonymous"></script>
