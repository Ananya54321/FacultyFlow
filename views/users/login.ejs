<% layout("/layouts/boilerplate")-%>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card" style="border-color: #1ecd8d">
        <div
          class="card-header"
          style="background-color: #182527; color: #ffffff">
          <h2 class="text-center mb-0">Login</h2>
        </div>
        <div class="card-body">
          <form action="/login" method="POST">
            <div class="mb-3">
              <label for="username" class="form-label" style="color: #545454"
                >UID</label
              >
              <input
                type="text"
                class="form-control"
                name="username"
                placeholder="Enter your Faculty ID/Student ID"
                id="username"
                required
                style="border-color: #1ecd8d" />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label" style="color: #545454"
                >Password</label
              >
              <input
                type="password"
                class="form-control"
                name="password"
                placeholder="Enter your password"
                id="password"
                required
                style="border-color: #1ecd8d" />
            </div>
            <div class="d-grid">
              <button
                type="submit"
                class="btn btn-primary"
                style="background-color: #1ecd8d; border-color: #1ecd8d">
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
