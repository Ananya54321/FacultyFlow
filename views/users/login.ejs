<% layout("/layouts/boilerplate")-%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST">
      <div class="mb-3">
        <label for="username" class="form-label">UID</label>
        <input
          type="text"
          class="form-control"
          name="username"
          placeholder="Enter your Faculty ID/Student ID"
          id="username"
          required />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="Enter your password"
          id="password"
          required />
      </div>

      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
